{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":enablePreCommit"
  ],
  "labels": [
    "dependencies"
  ],
  "automerge": true,
  "platformAutomerge": false,
  "schedule": [
    "every week on Monday"
  ],
  "dockerfile": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^plugins\\.list$"
      ],
      "matchStrings": [
        "^(?<depName>[a-z0-9-]+)\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)\\s*$"
      ],
      "datasourceTemplate": "custom.grafana-plugins",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "grafana-plugins": {
      "defaultRegistryUrlTemplate": "https://grafana.com/api/plugins/{{packageName}}",
      "format": "json",
      "transformTemplates": [
        "{\"releases\": $map($.versions, function($v) { {\"version\": $v.version} })}"
      ]
    }
  }
}
